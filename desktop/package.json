{
  "name": "agent-desktop-app",
  "version": "1.0.0",
  "description": "Agent Desktop Application - Electron + Vue 3",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vue": "cd src/renderer/vue-app && npm run dev",
    "dev:electron": "cross-env ELECTRON_IS_DEV=true electron .",
    "build": "cd src/renderer/vue-app && npm run build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "vue",
    "agent",
    "desktop"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.yourcompany.agentapp",
    "productName": "Agent App",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/vue-app/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Agent App"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
